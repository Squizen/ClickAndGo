<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="80dp">

    <RelativeLayout
        android:id="@+id/single_item_recview_relative_layout"
        android:layout_margin="15dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/bus_vector_icon"
            android:layout_centerVertical="true"
            android:id="@+id/single_ride_item_for_rec_view_rideImg"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@id/single_ride_item_for_rec_view_rideImg"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="Mielec"
            android:id="@+id/single_ride_item_for_rec_view_rideCityFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@id/single_ride_item_for_rec_view_rideCityFrom"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="-"
            android:id="@+id/single_ride_item_for_rec_view_rideCityPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@id/single_ride_item_for_rec_view_rideCityPause"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="Rzeszów"
            android:id="@+id/single_ride_item_for_rec_view_rideCityTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/single_ride_item_for_rec_view_rideDate"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/single_ride_item_for_rec_view_rideImg"
            android:textSize="16dp"
            android:layout_below="@id/single_ride_item_for_rec_view_rideCityFrom"
            android:text="29.09.2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/single_ride_item_for_rec_view_rideTime"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/single_ride_item_for_rec_view_rideDate"
            android:textSize="16dp"
            android:layout_below="@id/single_ride_item_for_rec_view_rideCityFrom"
            android:text="20:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/colorBlack"
            android:text="10.50 zł"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:id="@+id/single_ride_item_for_rec_view_ridePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView
        android:layout_alignParentBottom="true"
        android:src="#C8C8C8"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>