<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:id="@+id/mainPanelActivityCardWithTicket"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginLeft="30dp"
            android:id="@+id/single_ticket_item_QRIcon"
            android:layout_centerVertical="true"
            android:background="@drawable/qr_code"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <RelativeLayout
            android:padding="15dp"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/single_ticket_item_QRIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/single_ticket_item_LastTicketRideCitiesNamesTxt"
                android:textColor="@color/colorBlack"
                android:text="Mielec - RzeszÃ³w"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/single_ticket_item_LastTicketRideDateTxt"
                android:textColor="@color/colorBlack"
                android:text="24.10.2020"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/single_ticket_item_LastTicketRideTimeTxt"
                android:textColor="@color/colorBlack"
                android:layout_alignParentBottom="true"
                android:text="18:15"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>