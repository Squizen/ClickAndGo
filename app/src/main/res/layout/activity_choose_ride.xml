<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChooseRideActivity">

    <RelativeLayout
        android:id="@+id/choose_ride_topRelLay"
        android:background="@color/colorApplicationDarkBlue"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="DostÄ™pne przejazdy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/choose_ride_topRelLay"
        android:fitsSystemWindows="true"
        android:layoutAnimation="@anim/layout_fall_down"
        android:id="@+id/choose_ride_rec_view"
        android:layout_width="match_parent"
        android:layout_above="@id/bottomRelLay"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottomRelLay"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bottomNaviDrawerTicketIcon"
                android:src="@drawable/city_icon"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView

                android:layout_centerInParent="true"
                android:text="Moje bilety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>



    </RelativeLayout>


